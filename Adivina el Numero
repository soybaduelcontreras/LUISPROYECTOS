import java.util.Scanner;
import java.util.Random;

public class Adivina_el_nÃºmero {
    public static void main(String[] args) {
        // InicializaciÃ³n de variables
        Scanner lector = new Scanner(System.in);
        Random generador = new Random();

        int numeroSecreto = generador.nextInt(50) + 1; // Genera entre 1 y 50
        int intentoUsuario = 0;
        int contadorIntentos = 0;

        System.out.println("ğŸ¯ Â¡Bienvenido al juego! He pensado un nÃºmero entre 1 y 50, Adivina cual es????");

        // Bucle de juego
        while (intentoUsuario != numeroSecreto) {
            System.out.print("Introduce tu nÃºmero: ");
            intentoUsuario = lector.nextInt();
            contadorIntentos++;

            if (intentoUsuario < numeroSecreto) {
                System.out.println("âŒ Es MAYOR que " + intentoUsuario);
            } else if (intentoUsuario > numeroSecreto) {
                System.out.println("âŒ Es MENOR que " + intentoUsuario);
            } else {
                System.out.println("\nğŸ‰ Â¡Felicidades! Has Ganado.");
                System.out.println("ğŸ“Š Total de intentos: " + contadorIntentos);
            }
        }

        lector.close();
    }
}
