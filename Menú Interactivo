import java.util.Scanner;

public class Menu_Interactivo {
    public static void main(String[] args) {
        // Instancia de Scanner para leer la entrada del usuario
        Scanner sc = new Scanner(System.in);
        int opcion;
        double num1, num2, resultado;

        // El bloque do-while garantiza que el men√∫ se muestre al menos una vez
        do {
            System.out.println("\n--- üßÆ MEN√ö DE CALCULADORA ---");
            System.out.println("1Ô∏è‚É£ Sumar dos n√∫meros");
            System.out.println("2Ô∏è‚É£ Restar dos n√∫meros");
            System.out.println("3Ô∏è‚É£ Multiplicar dos n√∫meros");
            System.out.println("4Ô∏è‚É£ Salir");
            System.out.print("Selecciona una opci√≥n: ");

            opcion = sc.nextInt();

            // Estructura switch para manejar las opciones del men√∫
            switch (opcion) {
                case 1:
                    System.out.print("Introduce el primer n√∫mero: ");
                    num1 = sc.nextDouble();
                    System.out.print("Introduce el segundo n√∫mero: ");
                    num2 = sc.nextDouble();
                    resultado = num1 + num2;
                    System.out.println("‚úÖ Resultado de la suma: " + resultado);
                    break;

                case 2:
                    System.out.print("Introduce el primer n√∫mero: ");
                    num1 = sc.nextDouble();
                    System.out.print("Introduce el segundo n√∫mero: ");
                    num2 = sc.nextDouble();
                    resultado = num1 - num2;
                    System.out.println("‚úÖ Resultado de la resta: " + resultado);
                    break;

                case 3:
                    System.out.print("Introduce el primer n√∫mero: ");
                    num1 = sc.nextDouble();
                    System.out.print("Introduce el segundo n√∫mero: ");
                    num2 = sc.nextDouble();
                    resultado = num1 * num2;
                    System.out.println("‚úÖ Resultado de la multiplicaci√≥n: " + resultado);
                    break;

                case 4:
                    System.out.println("üëã Saliendo del programa... ¬°Hasta luego!");
                    break;

                default:
                    System.out.println("‚ö†Ô∏è Opci√≥n no v√°lida. Int√©ntalo de nuevo.");
            }

        } while (opcion != 4); // El bucle contin√∫a mientras la opci√≥n no sea 4

        sc.close(); // Cerramos el scanner para liberar recursos
    }
}
